<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/issuebadge/db" VERSION="20250118" COMMENT="XMLDB file for Moodle local/issuebadge">
  <TABLES>
    <TABLE NAME="local_issuebadge_issues" COMMENT="Stores issued badge records">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="User who received the badge"/>
        <FIELD NAME="badge_id" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Badge ID from IssueBadge"/>
        <FIELD NAME="issue_id" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Issue ID from IssueBadge API"/>
        <FIELD NAME="public_url" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Public URL to view the badge"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Course ID if issued in course context"/>
        <FIELD NAME="issuerby" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="User who issued the badge"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Timestamp when badge was issued"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Timestamp when record was modified"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="courseid" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
        <KEY NAME="issuerby" TYPE="foreign" FIELDS="issuerby" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="issue_id" UNIQUE="true" FIELDS="issue_id"/>
        <INDEX NAME="badge_id" UNIQUE="false" FIELDS="badge_id"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_issuebadge_course" COMMENT="Badge configuration for courses">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Course ID"/>
        <FIELD NAME="badge_id" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Badge ID to issue on completion"/>
        <FIELD NAME="enabled" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" SEQUENCE="false" COMMENT="Whether auto-issue is enabled for this course"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="courseid" TYPE="foreign-unique" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
